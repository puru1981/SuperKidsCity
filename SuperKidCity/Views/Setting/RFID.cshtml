@model SuperKidCity.Models.SettingViewModel
@{
    Layout = null;
}

@using (Html.BeginForm("RFID", "Setting", FormMethod.Post, new { @role = "form", @class = "form-horizontal", @id = "settingsForm_" + Model.SettingTypeId }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row-fluid">
            <form class="form-horizontal">
                <fieldset>
                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.RFIDSetting.ReaderId, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="controls col-md-10">
                            @Html.EditorFor(model => model.RFIDSetting.ReaderId, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.RFIDSetting.ReaderId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.RFIDSetting.IPv4, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="controls col-md-10">
                            @Html.EditorFor(model => model.RFIDSetting.IPv4, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.RFIDSetting.IPv4, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.RFIDSetting.Port, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="controls col-md-10">
                            @Html.EditorFor(model => model.RFIDSetting.Port, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.RFIDSetting.Port, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.RFIDSetting.DataFormat, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="controls col-md-10">
                            @Html.EditorFor(model => model.RFIDSetting.DataFormat, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.RFIDSetting.DataFormat, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CamSetting.AuthenticationRequired, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="controls col-md-1">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.CamSetting.AuthenticationRequired)
                            </div>
                            @Html.ValidationMessageFor(model => model.CamSetting.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <br />
                    <br />
                </fieldset>
                <div class="form-group">
                    <div class="col-md-offset-0 col-md-5">
                        <input type="button" value="Create" class="btn btn-default" onclick="return SubmitData(@Model.SettingTypeId)" />
                    </div>
                </div>
            </form>
        </div>
    </div>
}



