            </div>
        </div>

    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $("#School_Address_District").css('disabled', 'disabled');
            $("#School_Address_Locality").css('disabled', 'disabled');
            $("#School_Address_State").change(function () {
                //alert("Fired");
                $("#School_Address_District").empty();
                var url = "@Url.Action("GetByState","City")"  //"http://skc2.azurewebsites.net/city/getbystate"; //"http://localhost:59847/api/city/GetByState/";
                var data = { stateId: $("#School_Address_State").val() };
                $.ajax({
                    type: "GET",
                    url: url,
                    dataType: "JSON",
                    data: data,
                    success: function (response) {
                        $.each(response, function (index, item) {
                            $("#School_Address_District").append('<option value="'
                              + item.value + '">'
                              + item.name + '</option>');
                        });

                        $("#School_Address_District").trigger("change");
                    },
                    error: function (ex) {
                        alert('Failed to retrieve cities.' + ex);
                    }
                });
            });

            $("#School_Address_District").change(function () {
                //alert("Fired");
                $("#School_Address_Locality").empty();
                var url = "@Url.Action("GetByCity","Locality")"  //"http://skc2.azurewebsites.net/locality/getbycity"; //"http://localhost:59847/api/city/GetByState/";
                var data = { cityId: $("#School_Address_District").val() };
                $.ajax({
                    type: "GET",
                    url: url,
                    dataType: "JSON",
                    data: data,
                    success: function (response) {
                        $.each(response, function (index, item) {
                            $("#School_Address_Locality").append('<option value="'
                              + item.value + '">'
                              + item.name + '</option>');
                        });
                    },
                    error: function (ex) {
                        alert('Failed to retrieve localities.' + ex);
                    }
                });
            });
        });

    </script>
}
