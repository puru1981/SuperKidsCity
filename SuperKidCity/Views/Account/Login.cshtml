<section style="margin:0 2em;">
    <div class="col-lg-12 text-center">
        <div style="background:#ddd; padding:20px; margin-bottom:40px;">
            <h2 style="margin-top:0; margin-bottom:20px;">Login</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/Home/">Home</a></li>
                <li class="breadcrumb-item active">Login</li>
            </ol>
        </div>
    </div>
</section>
<section style="margin:3em 2em;" id="loginForm">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            <div class="whitebox" style="background:#dd3731;">
                <legend class="text text-capitalize" style="color:#fff;">
                    <span>
                        <i class="fa fa-key"></i>
                    </span> Login to Super kids city
                </legend>
                <h5>Use A Local Account To Log In.</h5>
                <br>

                <div class="">
                    <div class="form-group">
                        <label class="control-label text text-capitalize" for="Email">Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control text text-capitalize" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger text text-capitalize" })
                        @*<input class="form-control text text-capitalize" data-val="true" data-val-email="The Email field is not a valid e-mail address." data-val-required="The Email field is required." id="Email" name="Email" type="text" value="">*@
                    </div>

                    <div class="form-group">
                        <label class="control-label text text-capitalize" for="Password">Password</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger text text-capitalize" })
                        @*<input class="form-control" data-val="true" data-val-length="The Password must be at least 6 characters long." data-val-length-max="100" data-val-length-min="6" data-val-required="The Password field is required." id="Password" name="Password" type="password">*@
                    </div>

                    <div class="form-group">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe, new { @class = "text text-capitalize" })
                    </div>
                </div>

                <button type="submit" class="btn btn-default pull-right" style="background:#000; border:0; border-radius:0; color:#fff;">Login</button>


                <div class="clearfix"></div>
            </div>
        </div>

    }
</section>
<div class="clearfix"></div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}