@model SuperKidCity.Models.SearchViewModel

@{
    Layout = null;
}

@using (Html.BeginForm("GetSchool", "Search", FormMethod.Post, new { @id = "seacrhForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.SchoolId)
    <div class="col-lg-3">
        <div class="row">
            <div class="box1">
                <h4 style="margin-top:0; margin-bottom:20px;">Quick Search</h4>
                <form name="sentMessage" id="contactForm" novalidate="">
                    <div class="control-group form-group">
                        <div class="controls">
                            @Html.EditorFor(model => model.SchoolId, new { htmlAttributes = new { @class = "form-control", @placeholder = "Search By School", @aria_invalid = "false", @id = "schooltxt" } })
                            @Html.ValidationMessageFor(model => model.SchoolId, "", new { @class = "text-danger" })
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            @Html.DropDownListFor(model => model.LocalityId, new List<SelectListItem>() { new SelectListItem() { Text = "Search By Locality", Value = "0" } }, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.LocalityId, "", new { @class = "text-danger" })
                            <div class="help-block"></div>
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            @Html.DropDownListFor(model => model.StateId, Model.States, new { @class = "form-control dropdown", @placeholder = "Search By Locality" })
                            @Html.ValidationMessageFor(model => model.LocalityId, "", new { @class = "text-danger" })
                            <div class="help-block"></div>
                        </div>
                    </div>

                    <div id="success"></div>
                    <!-- For success/fail messages -->
                    <button type="submit" class="btn btn-default" style="background:#ffc46a; border:0; border-radius:0; color:#000;">Search</button>

                    <button type="button" class="btn btn-default" style="background:#ffc46a; border:0; border-radius:0; color:#000;" onclick="window.location.href='/Search/Advance'" href="/Search/Advance">
                        <i class="glyphicon glyphicon-search"></i>
                        Advance Search
                    </button>
                </form>
            </div>

            <div class="box2" style="min-height:278px; height: 278px;">
                <h4>What's New</h4>
                <marquee direction="up" onmouseover="this.stop();" onmouseout="this.start();" style="height:144px;">
                    <p><strong>Writing</strong></p>
                    <p class="content">Get a professional resume written by experts</p><br>
                    <p><strong>Certifications</strong></p>
                    <p class="content">Exhibit your skills to catch the eyes of recruiters</p>
                </marquee>
            </div>
        </div>
    </div>
