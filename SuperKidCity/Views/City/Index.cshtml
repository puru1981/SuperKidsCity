@model IEnumerable<SuperKidCity.Models.CityViewModel>

@{
    ViewBag.Title = "Index";
}

<fieldset>
    <legend class="text-capitalize text-center">
        Cities - [@ViewBag.State]
    </legend>
    <p>
        @Html.ActionLink("Add New", "Create", new { Id = ViewBag.StateId }, new { @class = "btn btn-sm btn-default" })
    </p>
    <table class="table table-condensed panel panel-primary">
        <thead class="panel-heading">
            <tr>
                <th class="text-capitalize text-center">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="text-capitalize text-center">
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                @if (ViewBag.StateId == null)
                {
                    <th>
                        @Html.DisplayNameFor(model => model.State)
                    </th>
                }
                <th>
                    @Html.DisplayName("Localities")
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody class="panel-body">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-capitalize text-center">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-capitalize text-center">
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    @if (ViewBag.StateId==null)
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                    }
                    <td class="col-md-4">
                        <table>
                            <tr>

                                <td>
                                    @Html.ActionLink("Add New", "Create", "Locality", new { Id = item.Id }, new { @class = "btn btn-sm btn-primary" }) |
                                    @Html.ActionLink(item.Localities.ToList().Count.ToString(), "Index", "Locality", new { Id = item.Id }, new { @class = "btn btn-sm btn-primary", @title = item.Localities.ToList().Count.ToString() + " Localities" })
                                </td>
                            </tr>
                        </table>

                    </td>
                    <td class="text-capitalize text-center col-md-4">
                        @Html.ActionLink("Edit", "Edit", new { Id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { Id = item.Id })
                    </td>
                </tr>
            }
        </tbody>


    </table>
</fieldset>

