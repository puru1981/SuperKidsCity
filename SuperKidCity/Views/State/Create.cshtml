@model SuperKidCity.Models.StateViewModel

@{
    ViewBag.Title = "Create";
    int limit = 5;
}

<br />
<br />
<fieldset>
    <legend class="text-capitalize text-center">
        <div class="row">
            <div class="col-md-2 pull-right">
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-default" })
            </div>
            <div class="col-md-2 pull-left">
                States
            </div>
        </div>

    </legend>

    <div class="panel panel-primary">
        <div class="panel-heading">
            <i class="glyphicon glyphicon-plus-sign"></i>  Add New
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("Create", "State", FormMethod.Post, new { @id = "addStatesForm", @class = "Form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <hr />


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @for (int index = 0; index <= limit; index++)
                    {
                        <div class="row">
                            <input type="hidden" value="@Model.Id" />
                            <input type="hidden" value="@Model.Cities" />
                            <div class="form-group col-md-6">
                                @Html.Label("Name", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.Editor("[" + index + "].Name", new { htmlAttributes = new { @class = "form-control", @placeholder = "State's " + @index + " Name" } })
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                @Html.Label("Code", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.Editor("[" + index + "].Code", new { htmlAttributes = new { @class = "form-control", @placeholder = "State's " + @index + " short code" } })
                                </div>
                            </div>

                        </div>
                    }

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Submit" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

        </div>

        <div class="panel-footer">

        </div>
    </div>
</fieldset>









@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
