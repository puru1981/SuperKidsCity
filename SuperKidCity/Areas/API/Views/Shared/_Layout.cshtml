<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SuperKids</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab" rel="stylesheet">
    <style>
        .text {
            font-family: 'Roboto Slab', serif;
            color: inherit;
        }

        .text-danger {
            color: #d9534f !important;
        }

        .btn {
            font-family: 'Roboto Slab', serif;
        }

        .navbar-inverse .navbar-nav > li > a:hover, .navbar-inverse .navbar-nav > li > a:focus {
            color: #6c9794;
        }

        .carousel-inner > .active {
            left: 0;
            height: 500px;
        }

        .jumbotron {
            /**/ background-image: url('/Content/Imgs/absback3.jpg');
        }

        .squareBox {
            background-color: ActiveCaption;
        }

        .navbar navbar-inverse {
            background-image: url('/Content/Imgs/absback3.jpg');
            color: white;
        }

        div.card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            text-align: center;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            color: #f7eded;
            margin: 10px !important;
        }
    </style>
</head>
<body style="background-image:url('/Content/Imgs/absback3.jpg'); background-color: #cccccc;
    padding-top: 40px;">

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">

        <div class="navbar-header">

            <div class="img-responsive col-md-4 col-sm-3 col-xs-3" style="padding-right:0; margin-right:4px;">
                <img class="img-thumbnail" src="~/Content/Imgs/logo.jpg" alt="logo" style="height: 74px;" id="brand_img" />
            </div>
            @Html.ActionLink("Super Kids City", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text text-capitalize text-info" })
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <div class="collapse navbar-collapse">
            @Html.Partial("_LoginPartial")


            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = " text text-capitalize text-info" })</li>
                <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = " text text-capitalize text-info" })</li>
                <li>@Html.ActionLink("Downlaods", "Contact", "Home", new { area = "" }, new { @class = " text text-capitalize text-info" })</li>
                <li>@Html.ActionLink("Work With Us", "Contact", "Home", new { area = "" }, new { @class = " text text-capitalize text-info" })</li>
                <li>@Html.ActionLink("News & Events", "Contact", "Home", new { area = "" }, new { @class = " text text-capitalize text-info" })</li>
                <li>@Html.ActionLink("Virtual Tours", "Contact", "Home", new { area = "" }, new { @class = " text text-capitalize text-info" })</li>
                <li>@Html.ActionLink("Creative Section", "Contact", "Home", new { area = "" }, new { @class = " text text-capitalize text-info" })</li>
                @*<li>@Html.ActionLink("How to Reach us", "Contact", "Home", new { area = "" }, new { @class = " text text-capitalize text-info" })</li>*@
            </ul>
        </div>
    </div>



    <div class="container-fluid body-content">
        <br />
        @RenderBody()
        <hr />

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
