@model IEnumerable<SKC.Lib.Data.Models.Entities.FacilityGroupDTO>

@{
    ViewBag.Title = "Index";
    Model.ToList();
}


<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-sm btn-primary" })
</p>

<div class="col-md-12">
    <div class="table-responsive table-striped table-condensed table-hover">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.GroupName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdatedAt)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>
                <th>
                    Member Count
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdatedAt)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>
                    <td>
                        @item.Members.Count
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

